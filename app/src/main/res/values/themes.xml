<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VendasNowPremium" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
<!--        <item name="colorOnPrimary">@color/gray_light</item>-->
        <item name="colorOnPrimary">@color/gray_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_variant</item>
        <item name="colorOnSecondary">@color/gray_light</item>

        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>-->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="spinBars">true</item>
    </style>

    <style name="CustomToolBarSaleStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="CustomToolBarAccountStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/purple</item>
    </style>

    <style name="Theme.VendasNowPremium.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VendasNowPremium.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VendasNowPremium.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/fab_margin</item>
        <item name="android:background">@drawable/custom_button_selector</item>
    </style>

    <style name="GoogleLoginButton">
        <item name="android:background">@drawable/google_button</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleFieldRequired" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextStyleSmall" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextStyleSmallTitle" parent="android:Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleTitle" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleTitleActivity" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyleDefault" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyleGraph" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomRadioAccountReceivable" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#7a7a7a</item>
        <item name="android:colorControlActivated">@color/purple</item>
        <item name="android:colorControlHighlight">@color/purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColorPrimaryDisableOnly">@color/purple</item>
    </style>
</resources>